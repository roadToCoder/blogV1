{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@layouts/*": ["./src/layouts/*"],
      "@components/*": ["./src/layouts/components/*"],
      "@config/*": ["./src/config/*"],
      "@content/*": ["./src/content/*"],
      "@styles/*": ["./src/styles/*"],
    }
  }
}
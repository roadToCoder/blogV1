---
import BaseLayoutPageVide from '../layouts/BaseLayoutPageVide.astro';
import HomeButton from '../components/HomeButton.astro';
const pageTitle = "MESSAGE BIEN ENVOYÉ !";
---
<BaseLayoutPageVide pageTitle={pageTitle}>     
    <div class="bg-slate-50 py-6 sm:py-8 lg:py-12">
        <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
            <div class="flex flex-col items-center">
                <!-- logo - start -->        
                <h1 class="mb-4 text-sm font-semibold uppercase text-sky-800 md:text-base">{pageTitle}</h1>
                <h2 class="mb-2 text-center text-2xl font-bold text-gray-800 md:text-3xl">Merci pour votre message.</h2>       
                <p class="mb-12 max-w-screen-md text-center text-gray-500 md:text-lg">Je vous répondrai dans les meilleurs délais.</p>      
                <HomeButton />
            </div>
        </div>
    </div>
</BaseLayoutPageVide>
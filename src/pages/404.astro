---
import BaseLayoutPageVide from '../layouts/BaseLayoutPageVide.astro';
const pageTitle = "A propos de moi";
---
<BaseLayoutPageVide>     
    <div class="bg-slate-50 py-6 sm:py-8 lg:py-12">
        <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
            <div class="flex flex-col items-center">
                <!-- logo - start -->        
                <p class="mb-4 text-sm font-semibold uppercase text-sky-800 md:text-base">Erreur 404</p>
                <h1 class="mb-2 text-center text-2xl font-bold text-gray-800 md:text-3xl">Page non trouvée</h1>
        
                <p class="mb-12 max-w-screen-md text-center text-gray-500 md:text-lg">La page que vous cherchez n'existe pas.</p>
        
                <a href="/" class="inline-block rounded-lg bg-gray-200 px-8 py-3 text-center text-sm font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-base">Retour à l'accueil</a>
            </div>
        </div>
    </div>
</BaseLayoutPageVide>
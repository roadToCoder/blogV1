---
import BaseLayoutPageVide from '../../layouts/BaseLayoutPageVide.astro';
const allPosts = await Astro.glob('../posts/*.md');
const nonDraftPosts = allPosts.filter((post) => !post.frontmatter.draft);
const tags = [...new Set(nonDraftPosts.map((post) => post.frontmatter.tags).flat())];
const pageTitle = "Tag Index";
---
<BaseLayoutPageVide pageTitle={pageTitle}>
    <div class="pl-2 lg:pl-4 xl:pl-20 pt-6 pb-5">       
        <p>Tags :</p>
        <div class="pt-2 inline-flex flex-wrap space-x-2" style="border-spacing: 2px;">
          {tags.map((tag) => (
              <p class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-semibold text-blue-600 sm:text-sm">
                  <a href={`/tags/${tag}`}># {tag}</a>
              </p>
          ))}
        </div>
    </div>
</BaseLayoutPageVide>
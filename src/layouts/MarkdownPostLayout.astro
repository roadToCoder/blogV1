---
import BaseLayoutPagePleine from './BaseLayoutPagePleine.astro';
import HomeButton from '../components/HomeButton.astro';
const { frontmatter } = Astro.props;
---
<BaseLayoutPagePleine pageTitle={frontmatter.title}>
  <div class="lg:mt-6 mx-auto max-w-[900px]">   
    <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
      {frontmatter.category}
    </span>
    <h1
      class="pl-1 lg:pl-0 sm:mt-6 text-3xl lg:text-4xl text-sky-900 font-bold lg:tracking-tight lg:leading-tight">
      {frontmatter.title}
    </h1>
    <div class="pl-2 lg:pl-0 flex gap-2 mt-1 items-center flex-wrap md:flex-nowrap">
      Publié le : {frontmatter.pubDate.slice(0,10)}
      <span class="text-gray-400 hidden md:block">•</span>
      <div class="w-full md:w-auto flex flex-wrap gap-3">
        {frontmatter.tags.map((tag) => (
            <p class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-semibold text-blue-600 sm:text-sm"><a href={`/tags/${tag}`}># {tag}</a></p>
        ))}
      </div>
    </div>
    <img src={frontmatter.image.url} width="900" height="600" alt={frontmatter.image.alt} class="mt-3"/>
  </div> 
  <div class="pr-2 pl-2 lg:pr-0 lg:pl-0 prose prose-md lg:prose-lg mt-6 mx-auto max-w-[900px]">
      <slot />
  </div>
  <div class="text-center mt-16">
    <HomeButton />
  </div>
</BaseLayoutPagePleine />
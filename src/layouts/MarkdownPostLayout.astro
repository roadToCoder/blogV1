---
import BaseLayoutPagePleine from './BaseLayoutPagePleine.astro';
import HomeButton from '../components/HomeButton.astro';
const { frontmatter } = Astro.props;
---
<BaseLayoutPagePleine pageTitle={frontmatter.title}>
    <div class="mx-auto max-w-3xl mt-14">
        <img src={frontmatter.image.url} width="600" alt={frontmatter.image.alt} />
        <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
          {frontmatter.category}
        </span>
        <h1
          class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-1 lg:leading-tight">
          {frontmatter.title}
        </h1>
        <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">

          Publié le : {frontmatter.pubDate.slice(0,10)}
          <span class="text-gray-400 hidden md:block">•</span>
          <div class="w-full md:w-auto flex flex-wrap gap-3">
            {frontmatter.tags.map((tag) => (
        <p><a href={`/tags/${tag}`}># {tag}</a></p>
    ))}
          </div>
        </div>
      </div>
  
      <div class="mx-auto prose prose-lg mt-6">
        <slot />
      </div>
      <div class="text-center mt-8">
      <HomeButton />
      </div>
</BaseLayoutPagePleine />